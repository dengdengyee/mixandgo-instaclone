<% if comment.present? %>
  <% if user_signed_in? && comment.liked_by?(current_user)  %>
    <%= button_to "", post_comment_like_path(post, comment, comment.likes.where(user_id: current_user.id)), class: "post-actions-unlike", method: :delete, format: "turbo_stream" %>
  <% else %>
    <%= button_to "", post_comment_likes_path(post, comment), class: "post-actions-like", format: "turbo_stream" %>
  <% end %>
<% end %>
